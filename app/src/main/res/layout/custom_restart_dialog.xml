<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#222222">

    <!-- ① Wrap your content in a vertical LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- ② Your Message TextView -->

        <TextView
            android:id="@+id/tvGameOver"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Lose !"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvMessage"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Number Was :00"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="24dp"/>

        <!-- ③ Your Restart Button (upgrade to MaterialButton) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDialogRestart"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Restart Game"
            android:textAllCaps="false"
            app:cornerRadius="24dp"
            app:backgroundTint="#7E57C2"
            app:rippleColor="#4DB6AC"
            app:icon="@drawable/baseline_autorenew_24"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
    


